ruby '2.3.0'
source 'https://rubygems.org'

git 'git://github.com/rails/rails.git' do
  gem 'rails'
end

gem 'pg'
gem 'puma'
gem 'sass-rails'
gem 'uglifier'
gem 'coffee-rails'
gem 'haml-rails'
gem 'hamlit'

gem 'jquery-rails'
gem 'turbolinks'
