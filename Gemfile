ruby '2.3.0'
source 'https://rubygems.org'

git 'git://github.com/rails/rails.git' do
  gem 'rails'
end

gem 'pg'
gem 'puma'
gem 'sass-rails'
gem 'uglifier'
gem 'coffee-rails'

gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder'

group :development, :test do
  gem 'byebug'
end

group :development do
  gem 'web-console', github: 'rails/web-console'
  gem 'listen'
end

group :production do
  gem 'rails_12factor'
end
